{
  "name": "expense-tracker",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "web": "cd apps/web && npm run dev",
    "start": "cd apps/mobile && npm run start",
    "mobile": "cd apps/mobile && npm run dev",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && npm run build",
    "lint": "eslint .",
    "preview": "cd apps/web && npm run preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0"
  }
}
